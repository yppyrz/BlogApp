@model List<CategoryViewModel>


<div class="sidebar">
    <div class="row">
        <div class="col-lg-12">
            <div class="sidebar-item categories">
                <div class="sidebar-heading">
                    <h2>Categories</h2>
                </div>
                <div class="content">
                    <ul>
                        @foreach (var category in Model)
                        {
            <li>
                <a href="?id=@category.CategoryID&Type=Category">@category.CategoryName</a>
            </li>}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
 
<tag text></tag>