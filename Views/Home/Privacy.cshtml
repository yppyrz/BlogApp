@{
    ViewData["Title"] = "Privacy Policy";
}
@{
    Layout = "_Layout";
}
@model BlogApp.Entities.Post


<section class="blog-posts grid-system">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="blog-post">
                                <div class="blog-thumb">
                                </div>
                                <div class="down-content">
                                    <span>@Model.PostCategoryName</span>
                                    <h4>@Model.PostTitle</h4>
                                    <ul class="post-info">
                                        <li><a href="#">@Model.PostAuthorName</a></li>
                                        <li><a href="#">@Model.PostPublishDate.ToShortDateString()</a></li>
                                        <li><a href="#">@Model.PostComments.Count</a></li>
                                    </ul>
                                    <p>
                                        @Model.PostContent
                                    </p>
                                    <div class="post-options">
                                        <div class="row">
                                            <div class="col-6">
                                                <ul class="post-tags">
                                                    <li><i class="fa fa-tags"></i></li>
                                                    @foreach (var item in Model.PostTags)
                                                    {
                                                        <li><a href="#">@item.TagName</a></li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item comments">
                                <div class="sidebar-heading">
                                    <h2>@Model.PostComments.Count</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        @foreach (var item in Model.PostComments)
                                        {
                                            <li>
                                                <div class="author-thumb">
                                                </div>
                                                <div class="right-content">
                                                    <h4>@item.UserName<span>@item.CommentPublishDate.ToShortDateString()</span></h4>
                                                    <p>@item.CommentContent</p>
                                                </div>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item submit-comment">
                                <div class="sidebar-heading">
                                    <h2>Your comment</h2>
                                </div>
                                <div class="content">
                                    <form id="comment" action="#" method="post">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <input name="name" type="text" asp-route-name="name" placeholder="Your name" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <textarea name="message" rows="6" asp-route-message="message" placeholder="Type your comment" required=""></textarea>
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <button type="submit" asp-route-id="@Model.PostID" class="main-button">Submit</button>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>